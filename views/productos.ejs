<style>
    .card {
        transition: transform 0.3s;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .card:hover {
        transform: translateY(-5px);
    }
    .text-primary {
        color: #e94560 !important;
    }
    .btn-primary {
        background-color: #e94560;
        border-color: #e94560;
    }
    .btn-primary:hover {
        background-color: #d13354;
        border-color: #d13354;
    }
    .price-tag {
        font-size: 2rem;
        font-weight: bold;
        color: #e94560;
    }
    .list-unstyled li {
        margin-bottom: 10px;
    }
    .card-img-top {
        height: 200px;
        object-fit: cover;
    }
</style>

